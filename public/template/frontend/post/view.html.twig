{% extends "frontend/base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="post-container col-12">
                <h1 class="post-title">{{ post.title }}</h1>
                <p class="post-chapo">
                    {{ post.chapo|raw }}
                </p>
                <p class="post-content">
                    {{ post.content|raw }}
                </p>
                <div class="post-infos">
                    <span class="badge badge-primary p-2" data-toggle="tooltip" title="PubliÃ© le">
                        <i class="fas fa-calendar mr-2"></i>
                        {{ post.createdAt|date("d/m/y") }}
                    </span>
                    <a href="/user/profil?id={{ post.user.id }}" class="badge badge-primary p-2" data-toggle="tooltip" title="Auteur">
                        <i class="fas fa-user-circle mr-2"></i>
                        {{ post.user.name ~ " " ~ post.user.firstName }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}