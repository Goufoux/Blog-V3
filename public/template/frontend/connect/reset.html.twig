{% extends "frontend/base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="col-12 mt-3">Réinitialisation de votre mot de passe</h1>
            <form action="#" method="POST" class="col-12 p-5">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="label-password">
                            <i class="fas fa-key"></i>
                        </span>
                    </div>
                    <input placeholder="Nouveau mot de passe" type="password" aria-describedby="label-password" required class="form-control" name="password" id="password" required value="{{ request.post('email')|default('') }}">
                    {% if form.hasError('password') %}
                    <div class="form-errors">
                        <span class="badge badge-danger">{{ form.errors('password') }}</span>
                    </div>    
                    {% endif %}
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="label-confirm-password">
                            <i class="fas fa-key"></i>
                        </span>
                    </div>
                    <input type="password" placeholder="Confirmation du mot de passe" name="confirm_password" aria-describedby="label-confirm-password" required id="confirm_password" class="form-control">
                    {% if form.hasError('confirm_password') %}
                    <div class="form-errors">
                        <span class="badge badge-danger">{{ form.errors('confirm_password') }}</span>
                    </div>    
                    {% endif %}
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success">Mettre à jour</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}