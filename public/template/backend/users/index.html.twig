{% extends "backend/base.html.twig" %}

{% block body %}
    <div class="row">
        {% include "backend/users/menu.html.twig" %}
        <div class="col-12 p-3">
            <h1>
                <i class="fas fa-user mr-2"></i>
                Liste des utilisateurs
            </h1>
            <table class="table table-dark table-striped">
                <thead>
                    <th>#</th>
                    <th>Créé le</th>
                    <th>Email</th>
                    <th></th>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.creatdAt()|date("d/m/y") }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ base_url }}view?id={{ user.id }}">
                                    <i class="fas fa-eye ico ico-info mx-1"></i>
                                </a>
                                <a href="{{ base_url }}update?id={{ user.id }}">
                                    <i class="fas fa-pen ico ico-info mx-1"></i>
                                </a>
                                <a href="{{ base_url }}delete?id={{ user.id }}">
                                    <i class="fas fa-trash ico ico-danger mx-1"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}