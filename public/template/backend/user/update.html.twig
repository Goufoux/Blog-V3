{% extends "backend/base.html.twig" %}

{% block body %}
    <div class="row">
        {% include "backend/user/menu.html.twig" %}
        <div class="col-12 p-3">
            <h1>
                <i class="fas fa-user mr-2"></i>
                {{ user.getName() ~ " " ~ user.getFirstName() }}
            </h1>
        </div>
        <form action="#" method="POST" class="col-10 mx-auto bg-secondary text-white p-3">
            <div class="form-row">
                <div class="form-group col-4">
                    <label for="name">Nom</label>
                    <input type="text" name="name" placeholder="Nom" id="name" class="form-control"
                    {% if request.hasPost('name') %}
                        value="{{ request.getPost('name') }}"
                    {% else %}
                        value="{{ user.getName() }}"
                    {% endif %}
                    >
                    {% if form.hasError('name') %}
                        <div class="col-12">
                            <span class="badge badge-danger">{{ form.getErrors('name') }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group col-4">
                    <label for="first_name">Prénom</label>
                    <input type="text" name="first_name" placeholder="Prénom" id="first_name" class="form-control"
                    {% if request.hasPost('first_name') %}
                        value="{{ request.getPost('first_name') }}"
                    {% else %}
                        value="{{ user.getFirstName() }}"
                    {% endif %}
                    >
                    {% if form.hasError('first_name') %}
                        <div class="col-12">
                            <span class="badge badge-danger">{{ form.getErrors('first_name') }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group col-4">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Email" id="email" class="form-control"
                    {% if request.hasPost('email') %}
                        value="{{ request.getPost('email') }}"
                    {% else %}
                        value="{{ user.getEmail() }}"
                    {% endif %}
                    >
                    {% if form.hasError('email') %}
                        <div class="col-12">
                            <span class="badge badge-danger">{{ form.getErrors('email') }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group col-3">
                    <label>
                        Attribution des rôles
                        {% if form.hasError('role') %}
                            <span class="badge badge-danger">{{ form.getErrors('role') }}</span>
                        {% endif %}
                    </label>
                    {% if roles is not empty %}
                    {% for role in roles %}
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <input type="checkbox" name="role_{{ role.getId() }}" value="{{ role.getId() }}" id="role_{{ role.getId() }}"
                                        {% if request.hasPost('role_'~role.getId()) %}
                                            checked
                                        {% else %}
                                            {% if app.user.hasRole(role.getName()) %}
                                                checked
                                            {% endif %}
                                        {% endif %}
                                        >
                                    </div>
                                </div>
                                <label for="role_{{ role.getId() }}" class="form-control">{{ role.getName() }}</label>
                            </div>
                        {% endfor %}
                    {% else %}
                        <button class="btn btn-warning">Aucun rôle</button>
                    {% endif %}
                </div>
                <div class="form-group col-12 text-right">
                    <input type="submit" value="Mettre à jour" class="btn btn-info">
                </div>
            </div>
        </form>
    </div>
{% endblock %}